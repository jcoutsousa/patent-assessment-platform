# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# PostgreSQL Database URLs for different environments
DATABASE_URL=postgresql://patent_user:patent_dev_password@localhost:5432/patent_assessment
DATABASE_URL_TEST=postgresql://patent_user:patent_dev_password@localhost:5432/patent_assessment_test

# ===========================================
# CACHE CONFIGURATION
# ===========================================

# Redis URLs for caching and sessions
REDIS_URL=redis://localhost:6379/0
REDIS_SESSION_URL=redis://localhost:6379/1

# ===========================================
# AI SERVICES CONFIGURATION
# ===========================================

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.1

# Google Patents API (for prior art search)
GOOGLE_PATENTS_API_KEY=optional_for_higher_rate_limits
GOOGLE_CUSTOM_SEARCH_ENGINE_ID=your_custom_search_engine_id
USPTO_API_KEY=optional_if_available

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================

# Environment and Security
ENVIRONMENT=development
SECRET_KEY=your_secret_key_here_change_in_production
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================

# Next.js Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_ENV=development
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# ===========================================
# FILE STORAGE CONFIGURATION
# ===========================================

# Local file storage
UPLOAD_FOLDER=./uploads
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=pdf,docx,txt,png,jpg,jpeg

# AWS S3 Configuration (for production)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET_NAME=your_s3_bucket_name
AWS_S3_REGION=us-east-1

# ===========================================
# EXTERNAL SERVICES
# ===========================================

# Error Tracking and Monitoring
SENTRY_DSN=your_sentry_dsn_for_error_tracking
VERCEL_ANALYTICS_ID=your_vercel_analytics_id

# Email Service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=noreply@patentassessment.com

# ===========================================
# SECURITY CONFIGURATION
# ===========================================

# CORS settings
ALLOWED_ORIGINS=http://localhost:3000,https://yourapp.com
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=Content-Type,Authorization

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================

DEBUG=true
LOG_LEVEL=debug
TEST_MODE=false

# ===========================================
# PRODUCTION OVERRIDES (uncomment for deployment)
# ===========================================

# ENVIRONMENT=production
# DEBUG=false
# LOG_LEVEL=info
# NEXT_PUBLIC_API_URL=https://api.patentassessment.com
# NEXT_PUBLIC_APP_ENV=production